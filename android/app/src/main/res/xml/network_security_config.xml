<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- By default, allow HTTPS traffic to all domains -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">*.com</domain>
        <domain includeSubdomains="true">*.org</domain>
        <domain includeSubdomains="true">*.net</domain>
        <domain includeSubdomains="true">*.co</domain>
        <domain includeSubdomains="true">*.io</domain>
        <domain includeSubdomains="true">*.dev</domain>
    </domain-config>
    
    <!-- Allow cleartext (HTTP) traffic ONLY for localhost development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.17</domain>
    </domain-config>
</network-security-config>
